# Application Environment
NODE_ENV=development
PORT=3000

# Database Configuration (use DB_TYPE=sqlite for local dev without Docker)
DB_TYPE=sqlite
DB_NAME=law_organizer.db
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_ADMIN_USER=postgres
DB_ADMIN_PASSWORD=postgres

# Redis Configuration (set REDIS_ENABLED=false for local dev without Redis)
REDIS_ENABLED=false
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis
REDIS_DB=0
REDIS_PREFIX=law-org:

# JWT Configuration
# SECURITY WARNING: Change these secrets in production!
# Generate strong secrets with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-in-production-MIN-32-CHARS-REQUIRED
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-MIN-32-CHARS-REQUIRED
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Stripe Configuration (for international payments)
STRIPE_SECRET_KEY=sk_test_xxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxx
STRIPE_PRICE_BASIC=price_xxxxxxxx
STRIPE_PRICE_PROFESSIONAL=price_xxxxxxxx
STRIPE_PRICE_ENTERPRISE=price_xxxxxxxx

# WayForPay Configuration (for Ukrainian payments)
WAYFORPAY_MERCHANT_ACCOUNT=test_merchant
WAYFORPAY_MERCHANT_SECRET_KEY=test_secret_key
WAYFORPAY_API_URL=https://secure.wayforpay.com/pay

# Application URL
APP_URL=http://localhost
BASE_DOMAIN=law-organizer.ua

# CORS Configuration (SECURITY: Specify allowed origins in production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# S3/MinIO Configuration (File Storage)
STORAGE_PROVIDER=s3
AWS_S3_BUCKET=law-organizer-uploads
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1
AWS_ENDPOINT=http://minio:9000
LOCAL_STORAGE_DIR=./storage
LOCAL_STORAGE_URL=http://localhost:3000/storage

# CDN Configuration
CDN_ENABLED=false
CDN_PROVIDER=cloudflare
CDN_DOMAIN=
CDN_BASE_URL=
CDN_PURGE_ENDPOINT=
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_API_TOKEN=
FASTLY_SERVICE_ID=
FASTLY_API_KEY=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@laworganizer.ua

# Rate Limiting (SECURITY: Adjust based on your needs)
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Monitoring
SENTRY_DSN=https://xxxxxx@sentry.io/xxxxxx
NEW_RELIC_LICENSE_KEY=xxxxxx

# Logging (set LOG_CONSOLE_ONLY=true for local dev to avoid file I/O on startup)
LOG_CONSOLE_ONLY=false
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_DIR=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_ERROR_MAX_FILES=30d
SENTRY_DSN=https://xxxxxx@sentry.io/xxxxxx
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
ENABLE_REQUEST_LOGGING=true
ENABLE_METHOD_LOGGING=true
LOGGING_PERFORMANCE_THRESHOLD=1000

# Features
ENABLE_RLS=false
ENABLE_AUDIT_LOGGING=true
ENABLE_WEBHOOKS=true

# Security Settings
# ENCRYPT_PII: Enable encryption of Personally Identifiable Information for GDPR compliance
ENCRYPT_PII=false
# ENCRYPTION_KEY: Required if ENCRYPT_PII=true (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=

# Query Optimization
SLOW_QUERY_THRESHOLD=1000
ENABLE_QUERY_LOGGING=true

# Audit Retention (days)
AUDIT_RETENTION_DAYS=2555

# PgAdmin (Development only)
PGADMIN_EMAIL=admin@laworganizer.ua
PGADMIN_PASSWORD=admin
